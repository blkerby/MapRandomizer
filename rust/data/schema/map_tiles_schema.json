{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Room map tile data",
  "description": "An array of objects, one for each room, containing details about their map tiles",
  "required": ["$schema", "rooms"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "title": "JSON Schema Path",
      "description": "A path to the definition of this file's JSON schema."
    },
    "rooms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "roomId",
          "roomName",
          "mapTiles"
        ],
        "additionalProperties": false,
        "properties": {
          "roomId": {
            "type": "integer",
            "description": "Room ID from the sm-json-data project"
          },
          "roomName": {
            "type": "string"
          },
          "heated": {
            "type": "boolean",
            "default": false
          },
          "liquidLevel": {
            "type": ["number", "null"],
            "description": "Level of the highest point of the liquid in this room, measured in map tiles from the top of the room.",
            "default": null
          },
          "liquidType": {
            "type": ["string", "null"],
            "description": "Type of liquid in this room.",
            "enum": ["water", "acid"],
            "default": null
          },
          "mapTiles": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "coords"
              ],
              "anyOf": [
                {
                  "required": [
                    "left",
                    "right",
                    "top",
                    "bottom"
                  ]
                },
                {
                  "required": [
                    "specialType"
                  ]
                }
              ],
              "additionalProperties": false,
              "properties": {
                "coords": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2,
                  "items": {
                    "type": "integer"
                  }
                },
                "left": {
                  "type": "string",
                  "enum": [
                    "empty",
                    "qolEmpty",
                    "passage",
                    "qolPassage",
                    "door",
                    "qolDoor",
                    "wall",
                    "qolWall"
                  ]
                },
                "right": {
                  "type": "string",
                  "enum": [
                    "empty",
                    "qolEmpty",
                    "passage",
                    "qolPassage",
                    "door",
                    "qolDoor",
                    "wall",
                    "qolWall"
                  ]
                },
                "top": {
                  "type": "string",
                  "enum": [
                    "empty",
                    "qolEmpty",
                    "passage",
                    "qolPassage",
                    "door",
                    "qolDoor",
                    "elevatorEntrance",
                    "sand",
                    "qolSand",
                    "wall",
                    "qolWall"
                  ]
                },
                "bottom": {
                  "type": "string",
                  "enum": [
                    "empty",
                    "qolEmpty",
                    "passage",
                    "qolPassage",
                    "door",
                    "qolDoor",
                    "elevatorEntrance",
                    "sand",
                    "qolSand",
                    "wall",
                    "qolWall"
                  ]
                },
                "interior": {
                  "type": "string",
                  "enum": [
                    "empty",
                    "item",
                    "doubleItem",
                    "hiddenItem",
                    "elevatorPlatformHigh",
                    "elevatorPlatformLow",
                    "saveStation",
                    "mapStation",
                    "energyRefill",
                    "ammoRefill",
                    "doubleRefill",
                    "ship",
                    "event"
                  ],
                  "default": "empty"
                },
                "specialType": {
                  "type": "string",
                  "enum": [
                    "slopeUpFloorLow",
                    "slopeUpFloorHigh",
                    "slopeUpCeilingLow",
                    "slopeUpCeilingHigh",
                    "slopeDownFloorLow",
                    "slopeDownFloorHigh",
                    "slopeDownCeilingLow",
                    "slopeDownCeilingHigh",
                    "tube",
                    "elevator",
                    "black"
                  ]
                }
              }
            }
          }
        }    
      }
    }
  }
}