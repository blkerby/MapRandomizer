      "name": "Enough Energy, Energy Consumed",
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "energy": {"consumed": 93}
      },
      "endRoomId": 0,
      "endNodeId": 2,
      "endState": {
        "energy": {"consumed": 98}
      }
    },
    {
      "name": "Multiplier",
      "startRoomId": 0,
      "startNodeId": 1,
      "settings": {
        "resourceMultiplier": 3.0
