{
  "$schema": "../../schema/scenarios.schema.json",
  "scenarios": [
    {
      "name": "Not Enough Energy",
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "energy": {"remaining": 99}
      },
      "endRoomId": 0,
      "endNodeId": 2,
      "fail": true
    },
    {
      "name": "Enough Energy",
      "globalState": {
        "maxEnergy": 199
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "energy": {"remaining": 121}
      },
      "endRoomId": 0,
      "endNodeId": 2
    },
    {
      "name": "Varia Only",
      "globalState": {
        "items": ["Varia"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "energy": {"remaining": 61}
      },
      "endRoomId": 0,
      "endNodeId": 2
    },
    {
      "name": "Gravity Only",
      "globalState": {
        "items": ["Gravity"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "energy": {"remaining": 61}
      },
      "endRoomId": 0,
      "endNodeId": 2
    },
    {
      "name": "Both Suits",
      "globalState": {
        "items": ["Varia", "Gravity"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "energy": {"remaining": 31}
      },
      "endRoomId": 0,
      "endNodeId": 2
    },
    {
      "name": "Manage Reserves",
      "globalState": {
        "maxReserves": 100
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "energy": {"remaining": 99},
        "reserves": {"remaining": 100}
      },
      "endRoomId": 0,
      "endNodeId": 2,
      "endState": {
        "energy": {"remaining": 1},
        "reserves": {"remaining": 78}
      }
    },
    {
      "name": "Unable to Manage Reserves",
      "globalState": {
        "maxReserves": 100,
        "disabledTech": ["canManageReserves"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "energy": {"remaining": 99},
        "reserves": {"remaining": 100}
      },
      "endRoomId": 0,
      "endNodeId": 2,
      "fail": true
    }
  ]
}